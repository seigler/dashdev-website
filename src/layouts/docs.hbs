<!DOCTYPE html>
<html>

<head>
	{{> meta }}
</head>

<body>

	{{> header }}

	<main{{#if navsub}} class="subpages" {{/if}}>

		<div class="content">

			{{> navsub }}
			
			<article>

				<h1>{{ title }}</h1>

				{{#if isPage}}
				{{else}}

				<p></p>

				{{/if}}

				{{{ contents }}}

				{{#if isPage}}

				{{> pagelist-docs }}

				{{else}}

				<nav class="nav page">
					<ul>

						{{#if previous.title }}
						<li><a href="{{ root }}{{ previous.path }}/" class="back">&laquo; back: {{ previous.title }}</a></li>
						</p>
						{{/if}}

						{{#if next.title }}
						<li><a href="{{ root }}{{ next.path }}/" class="next">next: {{ next.title }} &raquo;</a></li>
						</p>
						{{/if}}

					</ul>
				</nav>

				{{/if}}

			</article>

			{{#if isPage}}
			{{else}}
			{{> footer template='article' }}
			{{/if}}
			
		</div>

		</main>

</body>

</html>